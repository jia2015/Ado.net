@model OnlineStore.ViewModels.CateActivityVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="row">
    <div class="col-md-2">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Categories[0].CateName)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>
                        @Html.ActionLink(Html.DisplayFor(modelItem => item.CateName).ToHtmlString(),
                                  "Activities", "Home", new { categoryId = item.CateID }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CateID }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.CateID }) | <br />*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.CateID })
                    </td>
                </tr>
            }          
        </table>
    </div>
    <div class="col-md-10">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Activities[0].GatherTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activities[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activities[0].StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activities[0].EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activities[0].MinBuyers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activities[0].CurrentBuyers)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Activities)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GatherTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinBuyers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentBuyers)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.GatherID }) | <br />
                        @*@Html.ActionLink("Details", "Details", new { id = item.GatherID }) | <br />*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.GatherID })
                    </td>
                    <td>
                        @Html.ActionLink("Add to Cart", "AddOrder", new { id = item.GatherID })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>